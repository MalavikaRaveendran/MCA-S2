import java.util.Scanner;
public class StringMan{
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter the first string:");
        String str = scanner.nextLine();
        System.out.println("Enter the second string:");
        String str2 = scanner.nextLine();

        System.out.println("Char at first string: " + str.charAt(1));
        System.out.println("Concatenation: " + str + str2);
        System.out.println("Upper case: " + str.toUpperCase());
        System.out.println("Lower case: " + str.toLowerCase());
        System.out.println("Length of first string: " + str.length());
        System.out.println("Substring from the first string: " + str.substring(2));
        System.out.println("Replace 'a' with 'b' in the first string: " + str.replace('a', 'b'));
        System.out.println("Trimmed first string: " + str.trim());
        System.out.println("Are string 1 and string 2 equal? " + str.equals(str2));
        System.out.println("Character array of the first string: ");
        char[] charArray = str.toCharArray();
        for (char c : charArray) {
            System.out.print(c + " ");
        }
        System.out.println();

        System.out.println("Enter another string:");
        String b = scanner.nextLine();
        System.out.println("The index of 'k' in the string: " + b.indexOf("k"));

        String[] split = b.split(" ");
        for (String s : split) {
            System.out.println(s);
        }

        if (b.startsWith("a")) {
            System.out.println("Starts with a: " + b);
        }

        if (b.endsWith("a")) {
            System.out.println("Ends with a: " + b);
        }
    }
}
